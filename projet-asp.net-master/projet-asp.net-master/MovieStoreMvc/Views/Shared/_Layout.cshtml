@{
    string username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cinéFilm</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/movie_filter_FILL0_wght400_GRAD0_opsz48.svg">
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('/images/last.jpg');
            background-size: cover; /* Ajuste la taille de l'image pour couvrir toute la zone */
            background-repeat: no-repeat; /* Empêche la répétition de l'image */
            margin: 0;
        }
    </style>

</head>
<body>
    <nav class="nav-bar">
        <div class="logo">
            <img src="/images/whitelogo.png" />
        </div>
        <ul class="nav-link">
            <li><a class="active" href="/Home/Index">Acceuil</a></li>
            <li><a href="/Home/About">A propos de cinéFilm</a></li>
            @if (!string.IsNullOrEmpty(username))
            {

                <li><a class="nav-link" href="/Genre/Add">  Genre   </a></li>
                <li><a class="nav-link" href="/Movie/Add"> Film   </a></li>
                <li><a class="nav-link" href="/UserAuthentication/Logout">  Déconnexion</a></li>

            }

            @if (string.IsNullOrEmpty(username))
            {
                <li><a href="/UserAuthentication/Login">Connexion</a></li>
            }
        </ul>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        &#169; @DateTime.UtcNow.Year AIT ALI Assia
    </footer>
</body>
</html>